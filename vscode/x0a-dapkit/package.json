{
	"name": "x0a-dapkit",
	"displayName": "dapkit",
	"description": "dapkit support for vscode",
	"license": "MIT",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.42.1"
	},
	"categories": [
		"Debuggers"
	],
	"activationEvents": [
		"onDebug",
		"onCommand:x0a-dapkit.create-with-dap-proxy-launch-configuration"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/ishche/dapkit.git"
	},
	"bugs": {
		"url": "https://github.com/ishche/dapkit/issues"
	},
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "dapscript",
				"aliases": [
					"DAP Script"
				],
				"extensions": [
					"dap"
				]
			}
		],
		"debuggers": [
			{
				"type": "dapkit-proxy",
				"label": "Run with DAP proxy",
				"configurationAttributes": {
					"launch": {
						"properties": {
							"params": {
								"type": "object",
								"description": "Original launch configuration parameters"
							}
						}
					}
				}
			},
			{
				"type": "dapkit",
				"label": "dapkit session",
				"osx": {
					"program": "./bin/macos.sh"
				},
				"windows": {
					"program": "not ready ./bin/windows.bat"
				},
				"linux": {
					"program": "not ready ./bin/linux.sh"
				},
				"configurationAttributes": {
					"launch": {
						"properties": {
							"script": {
								"type": "string",
								"description": "file to use as script for debug adapter",
								"default": "${file}"
							}
						}
					}
				},
				"initialConfigurations": [],
				"configurationSnippets": [
					{
						"label": "dapkit: run by script",
						"body": {
							"type": "dapkit",
							"request": "launch",
							"name": "dapkit script runner",
							"script": "^\"\\${file}\""
						}
					}
				]
			}
		],
		"commands":[
			{
				"title": "Create DAP Proxy Launch Configuration",
				"command": "x0a-dapkit.create-with-dap-proxy-launch-configuration"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint"
	},
	"devDependencies": {
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.42.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"@typescript-eslint/parser": "^2.18.0",
		"eslint": "^6.8.0",
		"typescript": "^3.7.5"
	}
}